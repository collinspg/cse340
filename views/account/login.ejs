<div class="login-page">
    <h1><%= title %></h1>

    <!-- Display flash messages if any -->
    <%- messages() %>

    <!-- Login Form -->
    <form action="/login" method="POST">
        <div>
            <label for="email">Email:</label>
            <input type="email" name="account_email" id="email" required>
        </div>
        <div>
            <label for="password">Password:</label>
            <input type="password" name="account_password" id="password" required pattern="(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{12,}">
            <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character.</span>
        </div>
        <button type="submit">Login</button>
    </form>

    <!-- Registration Link -->
    <p>Don't have an account? <a href="/account/register">Register here</a></p>
</div>
