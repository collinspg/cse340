<div class="container">
    <div class="hero-content">
      <div class="text-center">
        <h1>Sign Up</h1>
        <p>Create an account to enjoy our services.</p>
      </div>
      <div class="card">
        <form class="card-body" action="/account/register" method="post">
          <fieldset>
            <p><i>All fields are required.</i></p>
            <%- messages() %> <% if (errors) { %>
            <ul class="notice">
              <% errors.array().forEach(error => { %>
              <li><%= error.msg %></li>
              <% }) %>
            </ul>
            <% } %>
            <div class="form-control">
              <label class="label">
                <span class="label-text">First Name</span>
              </label>
              <input
                type="text"
                name="account_firstname"
                placeholder="First Name"
                required
                value="<%= locals.account_firstname %>"
              />
            </div>
            <div class="form-control">
              <label class="label">
                <span class="label-text">Last Name</span>
              </label>
              <input
                type="text"
                name="account_lastname"
                placeholder="Last Name"
                required
                value="<%= locals.account_lastname %>"
              />
            </div>
            <div class="form-control">
              <label class="label">
                <span class="label-text">Email</span>
              </label>
              <input
                type="email"
                name="account_email"
                placeholder="Email"
                required
                value="<%= locals.account_email %>"
              />
            </div>
            <div class="form-control">
              <label class="label">
                <span class="label-text">Password</span>
              </label>
              <input
                type="password"
                name="account_password"
                placeholder="Password"
                required
                pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
                id="password"
              />
            </div>
            <div class="form-control">
              <label class="label">
                <span class="label-text">Confirm Password</span>
              </label>
              <input
                type="password"
                name="account_passwordConfirm"
                placeholder="Confirm Password"
                required
                pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
              />
            </div>
            <div class="leftPswrd">
              <span id="pswdBtn">Show Password</span>
            </div>
            <div>
              <p>
                <i>
                  Please make sure the password is at least 12 characters and has
                  at least 1 uppercase character, 1 number and 1 special
                  character.
                </i>
              </p>
            </div>
            <div class="form-control mt-6">
              <button type="submit" class="btn">Sign Up</button>
            </div>
          </fieldset>
        </form>
      </div>
    </div>
  </div>
  
  <script src="/js/password.js"></script>