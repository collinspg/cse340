<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
</head>
<body>
    <h1><%= title %></h1>

    <% if (records.length > 0) { %>
        <table>
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Description</th>
                    <th>Cost</th>
                </tr>
            </thead>
            <tbody>
                <% records.forEach(record => { %>
                    <tr>
                        <td><%= record.service_date %></td>
                        <td><%= record.service_description %></td>
                        <td>$<%= record.service_cost %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <p>No maintenance records found.</p>
    <% } %>

    <h2>Add Maintenance Record</h2>
    <% if (errors && errors.length > 0) { %>
        <ul>
            <% errors.forEach(error => { %>
                <li><%= error.msg %></li>
            <% }) %>
        </ul>
    <% } %>
    
    <form action="/maintenance/add" method="POST">
        <label for="vehicle_id">Vehicle ID:</label>
        <input type="number" name="vehicle_id" id="vehicle_id" required><br>

        <label for="service_date">Service Date:</label>
        <input type="date" name="service_date" id="service_date" required><br>

        <label for="service_description">Service Description:</label>
        <input type="text" name="service_description" id="service_description" required><br>

        <label for="service_cost">Service Cost:</label>
        <input type="number" name="service_cost" id="service_cost" required><br>

        <button type="submit">Add Record</button>
    </form>
</body>
</html>
